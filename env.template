# Database Configuration (MySQL 5.7)
DB_HOST_PROD=localhost
DB_USER_PROD=root
DB_PASSWORD_PROD=your_password
DB_NAME_PROD=your_database
DB_PORT_PROD=3306

# Prisma Database URL
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://${DB_USER_PROD}:${DB_PASSWORD_PROD}@${DB_HOST_PROD}:${DB_PORT_PROD}/${DB_NAME_PROD}?charset=utf8mb4&collation=utf8mb4_general_ci"

# Server Configuration
NODE_ENV=development
# REQUIRED: Set your backend server port (e.g., 3000, 3001, 8000, etc.)
PORT=YOUR_BACKEND_PORT

# Frontend Configuration
# REQUIRED: Set your frontend development server port (e.g., 5173, 3000, 8080, etc.)
VITE_PORT=YOUR_FRONTEND_PORT
# REQUIRED: Set this to match your backend PORT above
VITE_API_URL=http://localhost:YOUR_BACKEND_PORT

