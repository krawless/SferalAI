{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Server-specific TypeScript configuration
    
    // Node.js environment
    "lib": ["ESNext"],
    "types": ["bun-types", "node"],
    "module": "ESNext",
    "target": "ESNext",
    
    // No JSX in server code
    "jsx": "preserve",
    
    // Path aliases for server imports
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["./lib/*"]
    },
    
    // Server-specific strictness
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    
    // Build output settings
    "outDir": "./dist",
    "rootDir": ".",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
