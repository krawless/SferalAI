{
  "compilerOptions": {
    // Base TypeScript configuration for the monorepo
    // This file contains shared settings that both frontend and server extend from
    
    // Target modern JavaScript
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleDetection": "force",
    
    // Module resolution for modern bundlers
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    
    // Type checking - strict mode
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    
    // Allow JavaScript files
    "allowJs": true,
    "checkJs": false,
    
    // Additional strictness (can be overridden by extending configs)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    
    // Source map and declaration settings
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false
  },
  "exclude": ["node_modules", "dist", "build", ".next"]
}
